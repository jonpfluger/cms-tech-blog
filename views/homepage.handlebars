{{#each blogs}}
<div class="card my-3 border border-dark border-4 rounded-4">
  <div class="card-header navbar-dark bg-dark d-flex justify-content-between align-items-center">
    <h4>{{title}}</h4>
    <p class="mt-3">Posted by {{user.username}} on {{date_created}}</p>
  </div>
  <div class="card-body bg-info bg-opacity-50 text-dark w-100 m-auto p-auto rounded-bottom">
    <p>{{content}}</p>
  </div>
</div>
{{/each}}
