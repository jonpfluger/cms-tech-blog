<h2 class="mt-5">Login</h2>

<form class="form login-form mt-2">
  <div class="form-group ">
    <label for="email-login ">email:</label>
    <input class="form-input w-100" type="text" id="email-login" />
  </div>
  <div class="form-group">
    <label for="password-login">password:</label>
    <input class="form-input w-100" type="password" id="password-login" />
  </div>
  <div class="form-group my-3">
    <button class="btn btn-warning" type="submit">login</button>
  </div>
</form>

<h2 class="mt-5">Sign Up</h2>

<form class="form signup-form mt-2">
  <div class="form-group">
    <label for="username-signup">username:</label>
    <input class="form-input w-100" type="text" id="username-signup" />
  </div>
  <div class="form-group">
    <label for="email-signup">email:</label>
    <input class="form-input w-100" type="text" id="email-signup" />
  </div>
  <div class="form-group">
    <label for="password-signup">password:</label>
    <input class="form-input w-100" type="password" id="password-signup" />
  </div>
  <div class="form-group my-3">
    <button class="btn btn-warning" type="submit">Create</button>
  </div>
</form>

<script src="/js/login.js"></script>
